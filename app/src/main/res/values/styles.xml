<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme chính của ứng dụng -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Ẩn thanh trạng thái -->
        <item name="android:windowFullscreen">true</item>
        <!-- Ẩn thanh tiêu đề (action bar) nếu không cần -->
        <item name="windowNoTitle">true</item>
        <!-- Tùy chỉnh thêm nếu cần -->
        <item name="android:windowBackground">@android:color/white</item>




    </style>
    <!-- Style cho Spinner -->
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@null</item>
        <item name="android:padding">12dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownSelector">@android:color/transparent</item>
    </style>

    <!-- Style cho các item trong Spinner dropdown -->
    <style name="CustomSpinnerItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/white</item>
    </style>
</resources>