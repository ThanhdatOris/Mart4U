<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- TextView để hiển thị tên món đồ -->
    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Item Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView để hiển thị số lượng -->
    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Quantity: 1"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteItem"
        app:layout_constraintStart_toStartOf="@id/textViewItemName"
        app:layout_constraintTop_toBottomOf="@id/textViewItemName" />

    <!-- TextView để hiển thị ngày mua -->
    <TextView
        android:id="@+id/textViewPurchaseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Purchased: 2025-03-23"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteItem"
        app:layout_constraintStart_toStartOf="@id/textViewItemName"
        app:layout_constraintTop_toBottomOf="@id/textViewQuantity" />

    <!-- Button để xóa món đồ -->
    <Button
        android:id="@+id/btnDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>